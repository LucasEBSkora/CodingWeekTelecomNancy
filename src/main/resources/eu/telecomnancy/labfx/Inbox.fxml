<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.labfx.InboxScreen">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
         <children>
            <ListView fx:id="conversationsList" onMouseClicked="#selectConversation" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Utilisateur:" />
                  <TextField fx:id="interlocutorField" />
                  <Button mnemonicParsing="false" onAction="#newConversation" text="Envoyer" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="360.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Message:" />
                  <TextArea fx:id="messageField" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </HBox>
         </children>
      </VBox>
      <fx:include fx:id="conversationView" source="Conversation.fxml" HBox.hgrow="ALWAYS" />
   </children>
</HBox>
